{
  "manifest_version": 2,
  "name": "Focus Bomb",
  "description": "Use a calender and increase your productiveness, by kicking you out of certain websites!",
  "version": "1.0.0",
  "background": {
    "persistent": true,
    "scripts": ["app.js", "background.js"]
  },
  "browser_action": {
	"default_icon": "egg.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'"
}